<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/flickrPrimary</item>
        <item name="colorPrimaryDark">@color/flickrSecondary</item>
        <item name="colorAccent">@color/flickrAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/flickrPrimaryText</item>
    </style>

    <style name="Theme.Flickr" parent="Theme.Base" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/flickrPrimaryText</item>
        <item name="android:colorControlHighlight">@color/flickrBackgroundColor</item>
        <item name="android:actionMenuTextColor">@color/flickrPrimaryText</item>
        <item name="android:textColorSecondary">@color/flickrPrimaryText</item>
        <item name="android:background">@color/flickrSecondary</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/flickrPrimaryText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Flickr.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Flickr.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
